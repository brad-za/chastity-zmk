config SHIELD_CHASTITY_LEFT
    def_bool $(shields_list_contains,chastity_left)
    select ZMK_SPLIT
    select ZMK_SPLIT_ROLE_CENTRAL if SHIELD_CHASTITY_LEFT

config SHIELD_CHASTITY_RIGHT
    def_bool $(shields_list_contains,chastity_right)
    select ZMK_SPLIT
    select ZMK_SPLIT_ROLE_PERIPHERAL if SHIELD_CHASTITY_RIGHT
